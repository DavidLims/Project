<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivityBerandaPelamar">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_beranda"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/low1_gambar_beranda"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/low2">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_ss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekolah Tinggi Ilmu Farmasi Riau"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/textView_ss1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Programmer"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/beranda_buka"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Buka"
                        android:background="@drawable/biru"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        app:cornerRadius="7dp">
                    </TextView>

                    <TextView
                        android:id="@+id/beranda_total"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="    7"
                        android:textSize="12dp"
                        android:background="@drawable/hijau"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/ic_profile"
                        android:drawableTint="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Buka:"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black">
                    </TextView>

                    <TextView
                        android:id="@+id/tgl_beranda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 November 2023 - 17 November 2023"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/orange"
                        android:onClick="btn_lihat_detail_pel_1"
                        android:text="Lihat Detail"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:cornerRadius="7dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/orange"
        app:itemTextColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/abu"/>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>





