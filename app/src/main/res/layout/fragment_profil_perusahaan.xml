<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilPerusahaanFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textViewProfil_ID"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:text="PT. Sumatera Dinamika Utama"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/ic_cv"
                    android:drawableTint="@color/black"
                    android:background="@drawable/border_beranda">
                </TextView>

                <TextView
                    android:id="@+id/textViewUbahDataDiri_ID"
                    android:clickable="true"
                    android:onClick="textViewUbahDataDiriPer"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="Ubah Data Diri"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawableTint="@color/black"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_beranda">
                </TextView>

                <TextView
                    android:id="@+id/textViewKeluarPer_ID"
                    android:clickable="true"
                    android:onClick="textViewKeluarPer"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="Keluar Dari Akun"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/ic_exit"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_beranda">
                </TextView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>