<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".DetailLowPelamarActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_kembali_pel_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_kembali_beranda_pel"
            android:clickable="true"
            android:text="Kembali"
            android:textAlignment="inherit"
            android:textColor="@color/orange"
            android:textSize="13dp"
            tools:ignore="MissingConstraints"> </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Detail Lowongan Pekerjaan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_beranda"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textViewPosisiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Posisi"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewNamaInstansiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sekolah Tinggi Ilmu Farmasi Riau"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJudulDurasiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lowongan Dibuka Mulai:"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewDurasiDetail"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:text="13 November - 17 November"
                        android:textColor="@color/orange"
                        android:background="@drawable/border_orange"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJudulJumlahLowDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Penerimaan"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJumlahLowDetail"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="20"
                        android:textColor="@color/orange"
                        android:background="@drawable/border_orange"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJudulStatusLowDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Panggilan"
                        android:textColor="@color/merah"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewStatusLowDetail"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="Buka"
                        android:textColor="@color/merah"
                        android:background="@drawable/border_merah"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <ImageView
                        android:id="@+id/imageDetailLow"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/low2">
                    </ImageView>

                    <TextView
                        android:id="@+id/textViewPenjelasanLowDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="STIFAR Riau merupakan perguruan tinggi bidang Farmasi yang didirikan pada tahun 2002. Beralamat di jalan Kamboja, Kec. Tampan"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJudulSyaratDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Persyaratan :"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewSyaratLowDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1. Menguasai Codeigniter"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <Button
                        android:id="@+id/buttonDetail"
                        android:onClick="btn_lamar_kerja"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Lamar Pekerjaan"
                        android:backgroundTint="@color/hijau"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

