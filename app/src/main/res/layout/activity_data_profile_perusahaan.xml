<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/white"
    tools:context=".DataProfilePerusahaanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnKembaliLihatDataDiriPerusahaan"
            android:clickable="true"
            android:text="Kembali"
            android:textAlignment="inherit"
            android:textColor="@color/orange"
            android:textSize="13dp"
            tools:ignore="MissingConstraints"> </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Data Perusahaan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Profil"
                    android:textSize="15sp"
                    android:textAlignment="inherit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black">
                </TextView>

                <ImageView
                    android:id="@+id/uploadImageLogoPer"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logopertamina"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/hijau"
                    android:layout_gravity="center_horizontal">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Perusahaan"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="inherit"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/textViewNamaPerusahaanData"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_beranda"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Perusahaan"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="inherit"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/textViewEmailPerusahaanData"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_beranda"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password Email Perusahaan"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="inherit"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/textViewPassEmailPerusahaanData"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_beranda"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>


            </LinearLayout>





        </ScrollView>




    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>