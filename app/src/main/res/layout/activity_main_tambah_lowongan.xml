<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".MainActivityTambahLowongan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Poster"
            android:textSize="15sp"
            android:textAlignment="inherit"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_upload"
            android:id="@+id/uploadImage"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/hijau"
            android:layout_gravity="center_horizontal">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Foto"
            android:textSize="15sp"
            android:textColor="@color/orange"
            android:layout_gravity="center_horizontal">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi Lowongan Kerja"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textAlignment="inherit"
            android:textColor="@color/black">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/uploadPosisi"
            android:background="@drawable/border_beranda"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Masukkan Posisi Lowongan Kerja"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durasi Tanggal Pelamaran"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textAlignment="inherit"
            android:textColor="@color/black">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/uploadDurasi"
            android:background="@drawable/border_beranda"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Masukkan Durasi Lowongan Kerja"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syarat dan Ketentuan Lowongan"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textAlignment="inherit"
            android:textColor="@color/black">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/uploadSyarat"
            android:background="@drawable/border_beranda"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Masukkan Syarat dan Ketentuan Lowongan"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp">
        </EditText>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Tambah"
            android:id="@+id/tambahButton"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/hijau"
            android:layout_gravity="center"
            android:textStyle="bold">
        </Button>

    </LinearLayout>

</ScrollView>